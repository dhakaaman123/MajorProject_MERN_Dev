<% layout("/layouts/boilerplate") %>
<body>
  <div class="container mt-3">
    <h3 class="text-center">Listing Details</h3><br>

    <!-- Card Section -->
    <div class="row justify-content-center">
      <div class="card col-md-6 show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.description %><br>
            <%= listing.location %><br>
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>

    <!-- Buttons Section -->
    <div class="row justify-content-center mt-3">
      <div class="col-md-6 text-center">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark me-2">Edit</a>
        <form action="/listings/<%= listing.id %>?_method=DELETE" method="post" class="d-inline-block">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</body>

            
            
            
        

       
